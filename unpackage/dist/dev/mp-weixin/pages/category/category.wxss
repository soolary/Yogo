.header {
  height: 100rpx;
  background-color: #eb4450;
  padding: 20rpx 16rpx;
  box-sizing: border-box;
}
.header .inner {
  background-color: #fff;
  border-radius: 4rpx;
  height: 60rpx;
  color: #bbb;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.header .inner icon {
  margin: 6rpx 16rpx 0 0;
}
.content {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  position: absolute;
  top: 100rpx;
  width: 100%;
  bottom: 0;
}
.content .left {
  width: 198rpx;
  overflow: scroll;
}
.content .left view {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border: 1rpx solid #eee;
  box-sizing: border-box;
  background-color: #f4f4f4;
}
.content .left view.active {
  color: #eb4450;
  background-color: #fff;
  position: relative;
}
.content .left view.active::before {
  position: absolute;
  content: "";
  width: 8rpx;
  height: 60rpx;
  background-color: #eb4450;
  left: 0;
  top: 20rpx;
}
.content .right {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.right {
  padding: 20rpx 16rpx 0;
  overflow: scroll;
}
.right image {
  width: 520rpx;
  height: 180rpx;
}
.right .title {
  height: 110rpx;
  line-height: 110rpx;
  color: #e0e0e0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.right .title text {
  margin: 0 30rpx;
  color: #333;
}
.cate2 view {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.cate3 {
  width: 33.33%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin-bottom: 20rpx;
}
.cate3 image {
  width: 120rpx;
  height: 120rpx;
}

